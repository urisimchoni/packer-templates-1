{
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "Fedora_64",
    "iso_url": "{{user `mirror`}}/releases/test/25_Beta/Server/x86_64/iso/Fedora-Server-netinst-x86_64-25_Beta-1.1.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-fedora-25-x86_64-{{build_type}}",
    "vm_name": "packer-fedora-25-x86_64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<tab> ",
      "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/fedora-25/anaconda-ks.cfg ",
      "biosdevname=0 ",
      "net.ifnames=0 ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo systemctl poweroff",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
      ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
    ]
  }, {
    "type": "vmware-iso",
    "guest_os_type": "fedora-64",
    "iso_url": "{{user `mirror`}}/releases/test/25_Beta/Server/x86_64/iso/Fedora-Server-netinst-x86_64-25_Beta-1.1.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-fedora-25-x86_64-{{build_type}}",
    "vm_name": "packer-fedora-25-x86_64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<tab> ",
      "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/fedora-25/anaconda-ks.cfg ",
      "biosdevname=0 ",
      "net.ifnames=0 ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo systemctl poweroff",
    "vmx_data": {
      "memsize": "{{user `memory`}}",
      "numvcpus": "{{user `cpus`}}"
    }
  }, {
    "type": "qemu",
    "iso_url": "{{user `mirror`}}/releases/test/25_Beta/Server/x86_64/iso/Fedora-Server-netinst-x86_64-25_Beta-1.1.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-fedora-25-x86_64-{{build_type}}",
    "vm_name": "packer-fedora-25-x86_64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<tab> ",
      "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/fedora-25/anaconda-ks.cfg ",
      "biosdevname=0 ",
      "net.ifnames=0 ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo systemctl poweroff",
    "format": "qcow2",
    "accelerator": "kvm",
    "qemuargs": [
        [ "-m", "{{user `memory`}}" ],
	[ "-smp", "{{user `cpus`}}" ]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/fedora/virtualbox.sh",
      "scripts/fedora/vmware.sh",
      "scripts/common/vagrant.sh",
      "scripts/common/sshd.sh",
      "scripts/common/ansible.sh",
      "scripts/fedora/locale.sh",
      "scripts/fedora/selinux.sh",
      "scripts/fedora/lxde.sh",
      "scripts/fedora/cleanup.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": "{{user `compression_level`}}",
    "output": "fedora-25-x86_64-{{.Provider}}.box"
  }],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "40000",
    "headless": "false",
    "iso_checksum": "1786c1be417c9ba5f167c026c21979a6881d52ea6f2ac0851976d327d3d20ba8",
    "iso_checksum_type": "sha256",
    "memory": "512",
    "mirror": "http://download.fedoraproject.org/pub/fedora/linux",
    "ssh_timeout": "120m"
  }
}
